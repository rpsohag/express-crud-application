    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    
    <div class="container">
        <div class="row">
            <%- body %> 
        </div>
    </div>

 
    <!-- JS -->
    <script src="//code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
    <script src="/js/app.js"></script>
    <script>
        $(document).ready(function(){
            $('#employee_list').dataTable();
        })
    </script>
        <script>
            const employeeDeleteBtn = document.querySelectorAll('#employeeDeleteBtn');
            
            if(employeeDeleteBtn){
                employeeDeleteBtn.forEach(item => {
                    console.log(item);
                    
                  item.onclick = () => {
                    const msg = confirm('Are you sure to delete this Data?');
                    if(msg){
                        return true;
                    }else{
                        return false;
                    }
                  }
                })
            };



            
        </script>
        <script>
            const EmployeeImage = document.querySelector('.create_employee');
            const preview_image = document.getElementById('load_photo');
           if(EmployeeImage != null){
            EmployeeImage.onchange = (e) => {
                const ImageLink = URL.createObjectURL(e.target.files[0]);
                preview_image.removeAttribute('src','');
                preview_image.setAttribute('src', ImageLink);
            }
           }
        </script>
</body>
</html>